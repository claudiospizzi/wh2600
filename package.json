  "bugs": {
    "url": "https://github.com/claudiospizzi/wh2600/issues"
  },
  "homepage": "https://github.com/claudiospizzi/wh2600#readme",
  "devDependencies": {
    "prettier": "^2.1.2",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.0.5"
  }
}
